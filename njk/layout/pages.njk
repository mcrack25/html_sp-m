{% extends "./main.njk" %}

{% if not(breadcrumbs_list) %}
  {% 
    set breadcrumbs_list = [
      "Главная",
      "Внутренняя страница"
    ]
  %}
{% endif %}

{% if not(pages__title) %}
  {% set pages__title = 'Внутренняя страница' %}
{% endif %}

{% block content %}
    <div class="p-pages {{ p_pages__class }}">
      <div class="p-pages__head">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <div class="p-pages__head-in">

                <!-- Хлебные крошки -->
                {% from "njk/macro/breadcrumbs.njk" import breadcrumbs %}
                {{ breadcrumbs(breadcrumbs_list) }}

                <h2 class="p-pages__title">
                  {{ pages__title }}
                </h2>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="page-content">
        <div class="page-content__one">
          <div class="container-fluid">
            <div class="row">
              <div class="col-xl-2 col-lg-3 d-none d-lg-block">
                <div class="sidebar">
                  {% block sidebar %}{% endblock %}
                </div>
              </div>
              <div class="col-xl-10 col-lg-9 col-sm-12">
                <div class="content">
                  <!-- Контентная часть сайта -->
                  {% block page_content %}{% endblock %}
                </div>
              </div>
            </div>
          </div>
        </div>

        {% if (page_content__level_two == true) %}
          <div class="page-content__two">
            <div class="container-fluid">
              <div class="row">
                <div class="col-xl-2 col-lg-3 d-none d-lg-block">
                  <div class="sidebar">
                    {% block sidebar_two %}{% endblock %}
                  </div>
                </div>
                <div class="col-xl-10 col-lg-9 col-sm-12">
                  <div class="content">
                    <!-- Контентная часть сайта -->
                    {% block page_content_two %}{% endblock %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endif %}

        
      </div> 
{% endblock %}